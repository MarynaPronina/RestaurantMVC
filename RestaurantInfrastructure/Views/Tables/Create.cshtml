@model RestaurantDomain.Model.Table

@{
    ViewData["Title"] = "Створити стіл";
}

<div class="container py-5">
    <h2 class="text-center mb-4">➕ Додати новий стіл</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Number" class="form-label">Номер столу</label>
                            <input asp-for="Number" class="form-control" type="number" min="1" />
                            <span asp-validation-for="Number" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">⬅ Назад</a>
                            <button type="submit" class="btn btn-success">Зберегти</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}