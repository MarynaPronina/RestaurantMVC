@model RestaurantDomain.Model.Table
@{
    ViewData["Title"] = "Create Table";
}
<div class="menu-header">
    <h2>➕ Add New Table</h2>
</div>
<form asp-action="Create" class="bg-white p-4 rounded shadow-sm">
    <div class="mb-3">
        <label asp-for="Number" class="form-label">Table Number</label>
        <input asp-for="Number" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>