@model RestaurantDomain.Model.Dish

@{
    ViewData["Title"] = "Видалити страву";
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header bg-danger text-white text-center">
            <h4>❌ Ви впевнені, що хочете видалити цю страву?</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Назва:</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4">Ціна:</dt>
                <dd class="col-sm-8">@Model.Price грн</dd>
            </dl>

            <form asp-action="Delete" class="text-center mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Так, видалити</button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Скасувати</a>
            </form>
        </div>
    </div>
</div>
