@model RestaurantDomain.Model.DishOrder
@{
    ViewData["Title"] = "Edit DishOrder";
}
<div class="menu-header">
    <h2>✏️ Edit Dish Order</h2>
</div>
<form asp-action="Edit" class="bg-white p-4 rounded shadow-sm">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="OrderId" class="form-label">Order ID</label>
        <input asp-for="OrderId" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="DishId" class="form-label">Dish ID</label>
        <input asp-for="DishId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
