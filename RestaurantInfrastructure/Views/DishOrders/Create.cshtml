@model RestaurantDomain.Model.DishOrder

@{
    ViewData["Title"] = "Додати страву до замовлення";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white text-center">
                    <h4>➕ Додати страву до замовлення</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="OrderId" class="form-label">Замовлення</label>
                            <select asp-for="OrderId" asp-items="ViewBag.Orders" class="form-select"></select>
                            <span asp-validation-for="OrderId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DishId" class="form-label">Страва</label>
                            <select asp-for="DishId" asp-items="ViewBag.Dishes" class="form-select"></select>
                            <span asp-validation-for="DishId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Quantity" class="form-label">Кількість</label>
                            <input asp-for="Quantity" class="form-control" type="number" min="1" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Зберегти</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">⬅ Назад</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
