@model RestaurantDomain.Model.DishOrder
@{
    ViewData["Title"] = "Create DishOrder";
}
<div class="menu-header">
    <h2>➕ Add Dish to Order</h2>
</div>
<form asp-action="Create" class="bg-white p-4 rounded shadow-sm">
    <div class="mb-3">
        <label asp-for="OrderId" class="form-label">Order ID</label>
        <input asp-for="OrderId" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="DishId" class="form-label">Dish ID</label>
        <input asp-for="DishId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
