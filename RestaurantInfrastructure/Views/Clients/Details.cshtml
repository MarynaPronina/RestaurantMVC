@model RestaurantDomain.Model.Client
@{
    ViewData["Title"] = "Деталі клієнта";
}

<div class="container py-5">
    <h2 class="text-center mb-4">Деталі клієнта</h2>

    <div class="card mx-auto shadow-sm" style="max-width: 600px;">
        <div class="card-body">
            <p><strong>Ім’я:</strong> @Model.FirstName</p>
            <p><strong>Прізвище:</strong> @Model.LastName</p>
            <p><strong>Телефон:</strong> @Model.PhoneNumber</p>

            <div class="mt-4 d-flex justify-content-between">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редагувати</a>
                <a asp-action="Index" class="btn btn-secondary">Назад</a>
            </div>
        </div>
    </div>
</div>
