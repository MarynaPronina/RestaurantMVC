@model RestaurantDomain.Model.Client
@{
    ViewData["Title"] = "Видалити клієнта";
}

<div class="container py-5">
    <h2 class="text-center mb-4 text-danger">Підтвердити видалення</h2>

    <div class="card mx-auto shadow-sm border-danger" style="max-width: 600px;">
        <div class="card-body">
            <p><strong>Ім’я:</strong> @Model.FirstName</p>
            <p><strong>Прізвище:</strong> @Model.LastName</p>
            <p><strong>Телефон:</strong> @Model.PhoneNumber</p>

            <form asp-action="DeleteConfirmed">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
                    <button type="submit" class="btn btn-danger">Видалити</button>
                </div>
            </form>
        </div>
    </div>
</div>
