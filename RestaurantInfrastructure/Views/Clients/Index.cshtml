@model IEnumerable<RestaurantDomain.Model.Client>
@{
    ViewData["Title"] = "Клієнти";
}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Список клієнтів</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-person-plus-fill"></i> Додати клієнта
        </a>
    </div>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Ім’я</th>
                <th>Прізвище</th>
                <th>Телефон</th>
                <th class="text-end">Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Model)
            {
                <tr>
                    <td>@client.FirstName</td>
                    <td>@client.LastName</td>
                    <td>@client.PhoneNumber</td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@client.Id" class="btn btn-sm btn-primary">Редагувати</a>
                        <a asp-action="Details" asp-route-id="@client.Id" class="btn btn-sm btn-info">Деталі</a>
                        <a asp-action="Delete" asp-route-id="@client.Id" class="btn btn-sm btn-danger">Видалити</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>