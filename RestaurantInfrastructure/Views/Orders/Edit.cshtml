@* Edit.cshtml *@
@model RestaurantDomain.Model.Order
@{
    ViewData["Title"] = "Редагувати замовлення";
}

<div class="container py-5">
    <h2 class="text-center mb-4 fw-bold">Редагувати замовлення</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="ClientId" class="form-label">Клієнт</label>
                            <select asp-for="ClientId" class="form-select" asp-items="ViewBag.Clients"></select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TableId" class="form-label">Стіл</label>
                            <select asp-for="TableId" class="form-select" asp-items="ViewBag.Tables"></select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateTime" class="form-label">Дата і час</label>
                            <input asp-for="DateTime" class="form-control" type="datetime-local" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
                            <button type="submit" class="btn btn-primary">Зберегти</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>