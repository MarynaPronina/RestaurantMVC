@* Delete.cshtml *@
@model RestaurantDomain.Model.Order
@{
    ViewData["Title"] = "Видалити замовлення";
}

<div class="container py-5">
    <h2 class="text-center mb-4 text-danger">Видалити замовлення</h2>

    <div class="card mx-auto shadow-sm border-danger" style="max-width: 600px;">
        <div class="card-body">
            <p><strong>Клієнт:</strong> @Model.Client.LastName</p>
            <p><strong>Стіл:</strong> @Model.Table.Number</p>
            <p><strong>Дата:</strong> @Model.DateTime?.ToString("dd.MM.yyyy HH:mm")</p>

            <form asp-action="DeleteConfirmed">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
                    <button type="submit" class="btn btn-danger">Видалити</button>
                </div>
            </form>
        </div>
    </div>
</div>