@model RestaurantDomain.Model.DishCategory

@{
    ViewData["Title"] = "Деталі звʼязку";
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header bg-info text-white text-center">
            <h4>📄 Деталі категорії страви</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">ID:</dt>
                <dd class="col-sm-8">@Model.Id</dd>

                <dt class="col-sm-4">Страва:</dt>
                <dd class="col-sm-8">@Model.Dish?.Name ?? "—"</dd>

                <dt class="col-sm-4">Категорія:</dt>
                <dd class="col-sm-8">@Model.Category?.Name ?? "—"</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">Редагувати</a>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">⬅ Назад</a>
        </div>
    </div>
</div>
