@model RestaurantDomain.Model.DishCategory

@{
    ViewData["Title"] = "Призначити категорію страві";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-success text-white text-center">
                    <h4>➕ Призначити категорію страві</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" novalidate>

                        <div class="mb-3">
                            <label asp-for="DishId" class="form-label">Страва</label>
                            <select asp-for="DishId" asp-items="ViewBag.Dishes" class="form-select"></select>
                            <span asp-validation-for="DishId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label">Категорія</label>
                            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select"></select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Зберегти</button>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">⬅ Назад</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
