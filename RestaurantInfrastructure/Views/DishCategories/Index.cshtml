@model IEnumerable<RestaurantDomain.Model.DishCategory>

@{
    ViewData["Title"] = "Категорії страв по стравах";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>📋 Категорії страв</h2>
        <a asp-action="Create" class="btn btn-success">➕ Додати</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Немає жодного звʼязку між стравами та категоріями.</div>
    }
    else
    {
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Страва</th>
                    <th>Категорія</th>
                    <th class="text-end">Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Dish?.Name ?? "—"</td>
                        <td>@item.Category?.Name ?? "—"</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">Редагувати</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1">Деталі</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Видалити</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
