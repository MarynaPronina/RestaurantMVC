@model RestaurantDomain.Model.DishCategory

@{
    ViewData["Title"] = "Видалити звʼязок";
}

<div class="container mt-5">
    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white text-center">
            <h4>❌ Видалити звʼязок між стравою та категорією?</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Страва:</dt>
                <dd class="col-sm-8">@Model.Dish?.Name ?? "—"</dd>

                <dt class="col-sm-4">Категорія:</dt>
                <dd class="col-sm-8">@Model.Category?.Name ?? "—"</dd>
            </dl>

            <form asp-action="DeleteConfirmed">
                <input type="hidden" asp-for="Id" />
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-danger">Так, видалити</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">⬅ Скасувати</a>
                </div>
            </form>
        </div>
    </div>
</div>
